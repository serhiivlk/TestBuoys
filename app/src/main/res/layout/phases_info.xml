<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="phases"
            type="com.thermsx.localbuoys.model.MoonPhasesInfo.Phases"
            />
    </data>

    <merge>

        <TextView
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:text="Phases"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

        <TextView
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:text="New moon:"
            />

        <TextView
            android:layout_gravity="left"
            android:text="@{phases.newMoon}"
            />

        <TextView
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:text="First quarter:"
            />

        <TextView
            android:layout_gravity="left"
            android:text="@{phases.firstQuarter}"
            />

        <TextView
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:text="Full moon:"
            />

        <TextView
            android:layout_gravity="left"
            android:text="@{phases.fullMoon}"
            />

        <TextView
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:text="Last quarter:"
            />

        <TextView
            android:layout_gravity="left"
            android:text="@{phases.lastQuarter}"
            />
    </merge>
</layout>
